<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.nihal.myapplication.Login"
    android:background="#d5d2d2">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageButton2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:background="@android:drawable/ic_menu_gallery" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Add Photos"
                android:id="@+id/textView16"
                android:layout_gravity="left|top"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp" />

            <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageButton"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="-50dp"
                android:background="@drawable/checkin" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Check In"
            android:id="@+id/textView15"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="15dp" />

            <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageButton4"
            android:layout_gravity="right|top"
            android:layout_marginRight="120dp"
            android:layout_marginTop="5dp"
                android:background="@android:drawable/ic_menu_more" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="More"
            android:id="@+id/textView18"
            android:layout_gravity="right|top"
            android:layout_marginRight="90dp"
            android:layout_marginTop="15dp" />

        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_marginTop="55dp"
            android:background="#ffffff">

            <ImageView
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:id="@+id/imageView"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-10dp"
                android:background="@drawable/profile" />

            <ImageView
                android:layout_width="293dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView2"
                android:layout_gravity="right"
                android:background="@drawable/rectangle"
                android:layout_marginRight="5dp" />

            <EditText
                android:layout_width="299dp"
                android:layout_height="109dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_gravity="right" />


        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="172dp"
            android:background="#e9e6e6">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3"
                android:layout_gravity="left|center_vertical"
                android:background="@android:drawable/ic_menu_mylocation" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="33dp"
                android:text="post"
                android:id="@+id/button"
                android:layout_gravity="right|center_vertical"
                android:background="@color/colorPrimaryDark"
                android:layout_marginRight="5dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton5"
                android:layout_gravity="left|center_vertical"
                android:background="@android:drawable/arrow_down_float"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp" />


        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="482dp"
            android:layout_marginTop="240dp"
            android:background="#ffffff"
            android:layout_gravity="center_horizontal|bottom">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:layout_gravity="left|top" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/imageView4"
                android:layout_gravity="left|top"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/hrthik" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Hrithik Roshan"
                android:id="@+id/textView17"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="-40dp" />

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageButton6"
                android:layout_gravity="center_horizontal|top"
                android:background="@android:drawable/ic_media_play"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nihal Jabeen K"
                android:id="@+id/textView19"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="1 minute ago"
                android:id="@+id/textView20"
                android:layout_gravity="left|top"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="95dp" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/imageView5"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/img1" />

            <ImageView
                android:layout_width="165dp"
                android:layout_height="140dp"
                android:id="@+id/imageView6"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="5dp"
                android:layout_marginTop="-25dp"
                android:background="@drawable/img2" />

            <ImageView
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:id="@+id/imageView7"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="10dp"
                android:background="@drawable/img3" />

            <ImageView
                android:layout_width="165dp"
                android:layout_height="200dp"
                android:id="@+id/imageView8"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="5dp"
                android:layout_marginTop="-40dp"
                android:background="@drawable/img4" />
        </FrameLayout>


    </FrameLayout>
</ScrollView>
