<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.nihal.myapplication.MainActivity"
    android:background="#11468c">

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:background="#6a6565"
        android:id="@+id/frameLayout">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:id="@+id/edteml"
            android:layout_gravity="center_horizontal|top"
            android:background="#ffffff"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint="Enter your email" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:id="@+id/edtpswd"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#ffffff"
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:hint="Enter your password"
            android:password="true" />

    </FrameLayout>

    <Button
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/btnlgn"
        android:layout_gravity="center_horizontal|bottom"
        android:background="#0b2874"
        android:layout_below="@+id/frameLayout"
        android:layout_alignLeft="@+id/frameLayout"
        android:layout_alignStart="@+id/frameLayout"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:textSize="18dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="CREATE NEW ACCOUNT"
        android:id="@+id/b1"
        android:layout_below="@+id/btnlgn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#6b50f3"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password ?"
        android:id="@+id/textView"
        android:layout_below="@+id/b1"
        android:layout_alignLeft="@+id/btnlgn"
        android:layout_alignStart="@+id/btnlgn"
        android:textColor="#aceef5"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Help Center"
        android:id="@+id/textView2"
        android:layout_below="@+id/b1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        android:textColor="#aceef5" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_marginTop="44dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffff"
        android:layout_marginBottom="-50dp"
        android:id="@+id/frameLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="English(UK)"
            android:id="@+id/textView3"
            android:layout_gravity="left|top"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="മലയാളം"
            android:id="@+id/textView4"
            android:layout_gravity="right|top"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="हिन्दी"
            android:id="@+id/textView5"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="-35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" मराठी"
            android:id="@+id/textView6"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="85dp"
            android:layout_marginTop="-35dp" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Facebook 2016"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/frameLayout2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
